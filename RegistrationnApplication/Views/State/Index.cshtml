@model IEnumerable<RegistrationnApplication.Models.State>

@{
    ViewData["Title"] = "Index";
}
<style>
    .Search{
       width:400px;
   }
</style>
<h1 class="mb-4" style="text-align:left">State List</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<table data-toggle="table" data-pagination="true" data-search="true" class="table menu-table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StateId" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.StateId" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.StateId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

